<header
	class="main-header">
	<!-- Logo -->
	<a
		href="#" class="logo">
		<!-- mini logo for sidebar mini 50x50 pixels -->
		<span class="logo-mini">
			<b>N</b>E</span>
		<!-- logo for regular state and mobile devices -->
		<span class="logo-lg">
			{# <b>Nombre</b>Empresa</span> #}
			{{nombreApp()}}
	</a>
	<!-- Header Navbar: style can be found in header.less -->
	<nav
		class="navbar navbar-static-top">
		<!-- Sidebar toggle button-->
		<a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</a>

		<div class="navbar-custom-menu">

			<ul class="nav navbar-nav">
				<li
					class="dropdown user user-menu">

					<!-- Menu Toggle Button -->
					<a
						href="#" class="dropdown-toggle" data-toggle="dropdown">
						<!-- The user image in the navbar-->
						<img
						src="{{urlBase('resources/assets/img/avatar.png')}}" class="user-image" alt="User Image">
						<!-- hidden-xs hides the username on small devices so only the image appears. -->
						<span class="hidden-xs">{{ auth().empleado }}</span>
					</a>

					<ul class="dropdown-menu">
						<li class="user-header">
							<img src="{{urlBase('resources/assets/img/avatar.png')}}" class="img-circle" alt="User Image">

							<p>
								{{ auth().empleado }}
							</p>
						</li>
						<!-- Menu Footer-->
						<li class="user-footer">

							<div class="pull-right">
								<a href="{{urlBase('auth/salir')}}" class="btn btn-default btn-flat">Salir</a>
							</div>
						</li>
					</ul>
				</li>

			</ul>
		</div>
	</nav>
</header>
